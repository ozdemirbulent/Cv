@using MvcCv.Models.Entity
@model List<TblAdmin>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Admin Paneli</h2>
<table class="table table-bordered table table-striped table table-borderless">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Kaldır</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>    
            <td>
                <a href="/Admin/AdminDuzenle/
               @item.ID" class="btn btn-warning">Düzenle</a>
            </td>
            <td>

                @*<a href="/Admin/AdminSil/
        @item.ID" class="btn btn-danger">Sil</a>*@

                @Html.ActionLink("Sil", "AdminSil", new { ID = item.ID },
              new { @class = "btn btn-outline-danger", onclick = "return confirm ( 'Silmek İstediğinizden Emin misin ?')" })



            </td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle/" class="btn btn-outline-dark">Yeni Kullanıcı Ekle</a>
