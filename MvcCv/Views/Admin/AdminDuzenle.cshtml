@model MvcCv.Models.Entity.TblAdmin


@{
    ViewBag.Title = "AdminDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3 style="color:darkgoldenrod">Şifre Güncelleme Sayfası</h3>
<form method="post">
    @Html.Label("Admin ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-outline-info">Güncelle</button>
    <a href="/Admin/Index/" class="btn btn-outline-warning">Geri Dön</a>
</form>


