@model MvcCv.Models.Entity.TblYeteneklerim

@{
    ViewBag.Title = "Yetenek Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Yetenek Düzenleme</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    @Html.LabelFor(x => x.Yetenek, "Yetenek Açıklaması", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control", placeholder = "Yetenek adı girin" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(x => x.Oran, "Derece", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control", placeholder = "0-100 arasında değer girin" })
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="/Yetenek/Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
