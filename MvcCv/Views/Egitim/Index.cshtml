@using MvcCv.Models.Entity
@model List<TblEgitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2 style="color:yellowgreen">Eğitim Listesi</h2>
<table class="table table-bordered table table-striped">



    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>Tarih</th>
        <th>GNO</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <asp:Menu runat="server"></asp:Menu>
        <tr>

            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.AltBaslik1</td>
            <td>@item.AltBaslik2</td>
            <td>@item.Tarih</td>
            <td>@item.GNO</td>

            <td>

                <a class="btn btn-danger" href="/EgitimController/EgitimSil/@item.ID" onclick="return confirm ( 'Silmek İstediğinizden Emin misin ?')">Sil</a>
            </td>

            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/
                                                       @item.ID">
                    <i class="fas fa-pencil-alt">
                        Düzenle
                    </i>
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Egitim/EgitimEkle/" class="btn btn-outline-info">Yeni Eğitim Bilgisi Ekle</a>
