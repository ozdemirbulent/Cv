@model MvcCv.Models.Entity.TblEgitimlerim

@{
    ViewBag.Title = "EgitimEkle";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h3 style="color:darkseagreen"> Yeni Eğitim Bilgisi Ekleme Sayfası</h3>
<form method="post">

    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:darkblack" })
    <br />
    @Html.Label("Alt Başlık")
    @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:green" })

    <br />
    @Html.Label("Alt Başlık2")
    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:orange" })
    <br />
    @Html.Label("Genel Not Ortalaması : (GNO)")
    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.GNO, "", new { @style = "color:darkblue" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />
    <button class="btn btn-outline-info">Kaydet</button>
    <a href="/Egitim/Index/" class="btn btn-outline-danger">Vazgeç</a>
</form>
