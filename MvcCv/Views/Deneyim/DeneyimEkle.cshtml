@model MvcCv.Models.Entity.TblDeneyimlerim

@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="card-title text-center text-primary mb-4">
            <i class="fas fa-plus-circle me-2"></i> Yeni Deneyim Ekleme
        </h3>
        <hr />
        <form method="post">
            <div class="mb-3">
                <label for="Baslik" class="form-label text-dark fw-bold">Başlık</label>
                <input type="text" name="Baslik" id="Baslik" class="form-control form-control-lg" placeholder="Başlık Giriniz" />
                @Html.ValidationMessageFor(x => x.Baslik, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="AltBaslik" class="form-label text-dark fw-bold">Alt Başlık</label>
                <input type="text" name="AltBaslik" id="AltBaslik" class="form-control form-control-lg" placeholder="Alt Başlık" />
                @Html.ValidationMessageFor(x => x.AltBaslik, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="Tarih" class="form-label text-dark fw-bold">Tarih</label>
                <input type="text" name="Tarih" id="Tarih" class="form-control form-control-lg" placeholder="Tarih Giriniz" />
                @Html.ValidationMessageFor(x => x.Tarih, "", new { @class = "text-danger" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg px-5 me-3 custom-btn">
                    <i class="fas fa-save me-2"></i> Kaydet
                </button>
                <a href="/Deneyim/Index/" class="btn btn-warning btn-lg px-5 custom-btn">
                    <i class="fas fa-undo me-2"></i> Vazgeç
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .custom-btn {
        border-radius: 30px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
    }

        .custom-btn:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0,0,0,0.25);
        }
</style>

