@using MvcCv.Models.Entity
@model List<TblDeneyimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color:yellowgreen">Deneyim Listesi</h2>
<table class="table table-bordered table table-striped table table-borderless" >
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.Baslik</td>
        <td>@item.AltBaslik</td>
        <td>@item.Tarih</td>

        <td>
            @*<a href="/Deneyim/DeneyimSil/
        @item.ID" class="btn btn-danger">Sil</a>*@


            @Html.ActionLink("Sil", "DeneyimSil", new { ID = item.ID },
            new { @class = "btn btn-danger", onclick = "return confirm ( 'Silmek İstediğinizden Emin misin ?')" })

        </td>

        <td>
            <a href="/Deneyim/DeneyimGetir/
               @item.ID" class="btn btn-warning">Düzenle</a>
        </td>
    </tr>
    }
</table>
<a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>
